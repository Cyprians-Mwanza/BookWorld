<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background for the graph -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Horizontal grid lines -->
    <item>
        <shape android:shape="rectangle">
            <size android:height="1dp" />
            <solid android:color="#D0D0D0" />
        </shape>
        <gravity android:gravity="top" />
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:height="1dp" />
            <solid android:color="#D0D0D0" />
        </shape>
        <gravity android:gravity="center_vertical" />
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:height="1dp" />
            <solid android:color="#D0D0D0" />
        </shape>
        <gravity android:gravity="bottom" />
    </item>

    <!-- Vertical grid lines -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="1dp" />
            <solid android:color="#D0D0D0" />
        </shape>
        <gravity android:gravity="left" />
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:width="1dp" />
            <solid android:color="#D0D0D0" />
        </shape>
        <gravity android:gravity="center_horizontal" />
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:width="1dp" />
            <solid android:color="#D0D0D0" />
        </shape>
        <gravity android:gravity="right" />
    </item>

    <!-- Example graph line -->
    <item>
        <shape android:shape="rectangle">
            <size android:height="4dp" />
            <gradient
                android:angle="90"
                android:startColor="#4CAF50"
                android:endColor="#81C784" />
        </shape>
        <gravity android:gravity="center" />
    </item>
</layer-list>
