<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/warm_orange"/> <!-- Checked color -->
            <corners android:radius="20dp"/> <!-- Oval shape -->
        </shape>
    </item>

    <!-- Unchecked state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Unchecked color -->
            <corners android:radius="500dp"/> <!-- Oval shape -->
            <stroke android:color="@color/black" android:width="2dp"/> <!-- Border color -->
        </shape>
    </item>
</selector>
